{
  "name": "xrp-server",
  "version": "0.0.14",
  "description": "An API server for the XRP Ledger",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "build": "babel src --extensions '.ts' --ignore '**/*.spec.ts' --out-dir dist",
    "serve": "node dist/index.js",
    "clean": "rm -r dist || true",
    "check-types": "tsc",
    "test": "npm run clean && npm run build && npm run check-types && mocha",
    "unit": "npm run build && mocha",
    "coverage": "npm run build && nyc mocha"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "api-doc.yml"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "time npm run build && node dist/index.js"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "lcov",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "express-openapi": "^4.6.1",
    "ripple-lib": "^1.2.3",
    "source-map-support": "^0.5.12"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-typescript": "^7.3.3",
    "@types/chai": "^4.1.7",
    "@types/cors": "^2.8.5",
    "@types/express": "^4.16.1",
    "@types/mocha": "^5.2.6",
    "@types/sinon": "^7.0.12",
    "@types/supertest": "^2.0.7",
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.0",
    "nyc": "^14.1.1",
    "sinon": "^7.3.2",
    "supertest": "^4.0.2",
    "ts-mockito": "^2.3.1",
    "ts-node": "^8.2.0",
    "typescript": "^3.4.5"
  }
}
